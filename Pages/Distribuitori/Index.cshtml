@page "{id:int?}"
@model Coffe_Project.Pages.Distribuitori.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distribuitor[0].DistribuitorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DistribuitorData.Distribuitori)
        {
            string selectedRow = "";
            if (item.ID == Model.DistribuitorID)
             {
                 selectedRow = "table-success";
                }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DistribuitorName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.DistribuitorData.Coffes != null)
{
    <h3>Cafele livrate de Distribuitorul selectat</h3>
    <table class="table">

        @foreach (var item in Model.DistribuitorData.Distribuitori)
        {
            string selectedRow = "";
            if (item.ID == Model.DistribuitorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Coffes)
                        {

                                @b.Denumire @: @b.Origine
                                <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}

